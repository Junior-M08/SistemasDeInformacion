@model IEnumerable<SistemasDeInformacioinMVC.DetalleVenta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<body style="background-color:skyblue;">
</body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProductoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdVentaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductoNavigation.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVentaNavigation.IdVenta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDetalleVenta">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDetalleVenta">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDetalleVenta">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
